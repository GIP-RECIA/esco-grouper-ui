<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<bean id="areaProfile" class="org.esco.grouperui.web.beans.profile.UserProfile">
	<property name="name" value="areaProfile"></property>
	<property name="functions">
		<map>
			<entry key="org.esco.grouperui.web.areaNavigation" value="true"></entry>

			<entry key="org.esco.grouperui.web.person.properties" value="false"></entry>
			<entry key="org.esco.grouperui.web.person.properties.tab.memberships" value="false"></entry>
			<entry key="org.esco.grouperui.web.person.properties.tab.privileges" value="false"></entry>
			<entry key="org.esco.grouperui.web.person.properties.tab.subscriptions" value="false"></entry>

			<entry key="org.esco.grouperui.web.group.properties" value="false"></entry>
			<entry key="org.esco.grouperui.web.group.properties.tab.members" value="false"></entry>
			<entry key="org.esco.grouperui.web.group.properties.tab.memberships" value="false"></entry>
			<entry key="org.esco.grouperui.web.group.properties.tab.privileges" value="false"></entry>

			<entry key="org.esco.grouperui.web.stem.properties" value="false"></entry>

			<entry key="org.esco.grouperui.web.group.modification" value="false"></entry>

			<entry key="org.esco.grouperui.web.stem.modification" value="false"></entry>
			<entry key="org.esco.grouperui.web.stem.modification.tab.privileges" value="false"></entry>
		</map>
	</property>
</bean>

<bean class="org.esco.grouperui.web.beans.profile.UserProfileAggregator">
	<property name="profiles">
		<list>
			<ref bean="areaProfile"></ref>
		</list>
	</property>
</bean>

</beans>